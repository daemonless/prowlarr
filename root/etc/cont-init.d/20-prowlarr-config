#!/bin/sh
# Set up prowlarr user and config directory

PUID=${PUID:-1000}
PGID=${PGID:-1000}

echo "[prowlarr] Setting up prowlarr user with PUID=$PUID PGID=$PGID"

# Modify prowlarr user/group to match requested UID/GID
pw groupmod prowlarr -g "$PGID" 2>/dev/null || true

# Ensure config directory has correct ownership
chown -R bsd:bsd /config

echo "[prowlarr] Configuration complete"
